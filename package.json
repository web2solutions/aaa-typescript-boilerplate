{
  "name": "aaa-typescript-boilerplate",
  "version": "1.0.0",
  "description": "This is a boilerplate to build REST APIs, Monolithic Modular and Microservice applications with Typescript.",
  "main": "src/fastify.ts",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=20.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "check-node-version": "node check-node-version.js",
    "preinstall": "npm run check-node-version",
    "test": "NODE_ENV=ci npx jest ./test --verbose --collect-coverage --detectOpenHandles",
    "test:unit": "NODE_ENV=ci jest ./test/unit --verbose --collect-coverage --detectOpenHandles",
    "test:integration": "NODE_ENV=ci npm run test:integration:express && npm run test:integration:fastify && npm run test:integration:restify",
    "test:integration:express": "NODE_ENV=ci jest ./test/integration/Express --verbose --detectOpenHandles --collect-coverage",
    "test:integration:fastify": "NODE_ENV=ci jest ./test/integration/Fastify --verbose --detectOpenHandles --collect-coverage",
    "test:integration:restify": "NODE_ENV=ci jest ./test/integration/Restify --verbose --detectOpenHandles --collect-coverage",
    "test:integration:lambda": "NODE_ENV=ci jest ./test/integration/Lambda --verbose --detectOpenHandles --collect-coverage",
    "dev:express": "nodemon ./src/express.ts",
    "dev:fastify": "nodemon ./src/fastify.ts",
    "dev:restify": "nodemon ./src/restify.ts",
    "dev:serverless": "npm run lint && NODE_ENV=dev serverless dev",
    "dev:hyper-express": "nodemon ./src/hyper-express.ts",
    "tdd": "NODE_ENV=ci npx jest --verbose --detectOpenHandles --watchAll",
    "prepare": "husky install",
    "commit": "git add . && git-cz",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "docker:composeredis": "docker compose -f \"docker-compose-redis.yml\" up -d --build",
    "docker:stop": "docker-compose stop",
    "docker:restart": "docker compose -f \"docker-compose-redis.yml\" down && npm run docker:composeredis",
    "docker:clean": "docker system prune -a"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^7.0.1",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "bunyan": "^1.8.15",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "fastify": "^4.26.2",
    "helmet": "^7.1.0",
    "hyper-express": "^6.17.2",
    "jsonwebtoken": "^9.0.2",
    "live-directory": "^3.0.3",
    "openapi-types": "^12.1.3",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.2.2",
    "restify": "^11.1.0",
    "semver": "^7.6.2",
    "serverless": "^4.2.4",
    "uuid": "^9.0.1",
    "xss": "^1.0.15",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/aws-lambda": "^8.10.145",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.19",
    "@types/restify": "^8.5.12",
    "@types/serverless": "^3.12.22",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-module-resolver": "^1.5.0",
    "eslint-plugin-no-async-foreach": "^0.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  },
  "resolutions": {
    "serverless": "^4.1.12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "hooks": {
    "pre-commit": "npm run lint && npm run test"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/web2solutions/aaa-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/web2solutions/aaa-typescript-boilerplate#readme",
  "author": {
    "name": "Eduardo Almeida",
    "url": "https://github.com/web2solutions",
    "email": "web2solucoes@gmail.com"
  }
}
